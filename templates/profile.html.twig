                <th>R2</th>
                <th>R3</th>

                <th>D0</th>
                <th>R1</th>
                <th>R2</th>
                <th>R3</th>

                <th>D0</th>
                <th>R1</th>
                <th>R2</th>
                <th>R3</th>

                <th>D0</th>
                <th>R1</th>
                <th>R2</th>
                <th>R3</th>

                <th>D0</th>
                <th>R1</th>
                <th>R2</th>
                <th>R3</th>

            </tr>
            </thead>

            <tbody>

                <tr v-for="kitty, id in kitties">
                    <td><a v-bind:href="getKittyUrl(id)" target="_blank"><% id %></a></td>
                    <td><% kitty['gen'] %></td>

                    <td><% kitty['body']['D0'] %></td>
