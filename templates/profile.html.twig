    <section class="section" v-if="!length">
        <div class="container is-fullhd">
            <h1 class="has-text-weight-bold is-size-1">Kitty Profile</h1>
            <div class="field">
                <label class="label">Profile Address (0x...)</label>
                <div class="control">
