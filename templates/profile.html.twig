                    <td><% kitty['wild']['D0'] %></td>
                    <td><% kitty['wild']['R1'] %></td>
                    <td><% kitty['wild']['R2'] %></td>
                    <td><% kitty['wild']['R3'] %></td>

                    <td><% kitty['mouth']['D0'] %></td>
                    <td><% kitty['mouth']['R1'] %></td>
                    <td><% kitty['mouth']['R2'] %></td>
                    <td><% kitty['mouth']['R3'] %></td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="modal" v-bind:class="{ 'is-active': loading}">>
        <div class="modal-background is-white"></div>
        <div class="modal-content">
            <div class="container">
                <div class="notification">
                    <h3>Herding your cats, please be patient!</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="lib/main.js"></script>
<script type="application/javascript">

    Vue.prototype.$log = console.log.bind(console);

    var app = new Vue({
        el: '#app',
        data: {
            profile : "",
            kitties : {},
            length : 0,
            loading : false
        },
        methods : {
            getUrl : function () {
                localStorage.setItem('profile', this.profile);

                this.loading = true;

                axios('http://dna.cryptokittydata.info/dna/profile/'+this.profile).then(function (response) {
                    var kitties = [];

                    app.loading = false;

                    for (i in response.data) {
                        kitties[i] = response.data[i];

                        app.kitties[i] = response.data[i];

                        console.log(response.data[i]);
                    }

                    app.length = Object.keys(app.kitties).length;
                });
            },
            logout : function () {
                this.kitties = [];
            },
            getKittyUrl : function (id) {
                return 'https://www.cryptokitties.co/kitty/'+id;
            }
        },
        delimiters : ['<%', '%>'],
        mounted: function () {
            // Code for localStorage/sessionStorage.
            var profile = localStorage.getItem('profile');

            this.$nextTick(function () {
                if (typeof web3 !== 'undefined') {
                    this.profile = web3.eth.accounts[0];
                }
            });
        }
    });
</script>

<footer class="footer">
