<div class="card kitty-card">

    <div class="card-image" style="padding-left: 10px; padding-right: 10px;">
        <nav class="level is-marginless" style="padding-bottom: 5px;padding-top: 5px">
            <!-- Left side -->
            <div class="level-left">
                <div class="level-item">
                    <span class="icon has-text-orangeyred">
                        <i class="ion-android-star"></i>
                    </span>
                    <span class="icon has-text-orangeyred">
                        <i class="ion-android-star"></i>
                    </span>
                    <span class="icon has-text-orangeyred">
                        <i class="ion-android-star"></i>
                    </span>
                    <span class="icon has-text-orangeyred">
                        <i class="ion-android-star"></i>
                    </span>
                    <span class="icon has-text-orangeyred">
                        <i class="ion-android-star"></i>
                    </span>
                </div>
            </div>
            <div class="level-right">
                <div class="level-item">
                    <span class="has-text-blueydark has-text-weight-bold">Kitty #<span><% selectedKitty.id %></span></span>
                </div>
            </div>
        </nav>
        <figure class="image" style="border: #0a0a0a solid 1px; background-color: white;">
            <img v-bind:src="selectedKitty.image" id="kittyImage">
        </figure>

        <progress class="progress is-radiusless" v-bind:class="getSelectedKittyHealthBar"  :value="selectedKitty.health" :max="selectedKitty.maxhealth"></progress>

    </div>
    <div style="margin: 10px; border: #0a0a0a solid 1px;">
        <div class="box">
            <div class="columns is-multiline">
                <div class="column is-4">
                    <span class="has-text-blueydark">
                        <a class="button" v-on:click="skill1" :disabled="!turn || selectedKitty.skill1.countdown > 0">
                            <% selectedKitty.skill1.name %>
                        </a>
                    </span>
                </div>
                <div class="column is-4">
                    <div class="tags has-addons" v-for="(value, label) in selectedKitty.skill1.effects">
                        <span class="tag is-blueydark"><% label %></span>
                        <span class="tag is-info"><% value %></span>
                    </div>
                </div>
                <div class="column is-4">
                    <div class="tags has-addons">
                            <span class="tag is-blueydark">
                                <span class="icon">
                                    <i class="far fa-clock"></i>
                                </span>
                            </span>
                        <span class="tag is-warning">
                                <% selectedKitty.skill1.cooldown %>
                            </span>
                    </div>
                </div>


                <div class="column is-4">
                    <span class="has-text-blueydark">
                        <a class="button" v-on:click="skill2" :disabled="!turn || selectedKitty.skill2.countdown > 0">
                            <% selectedKitty.skill2.name %>
                        </a>
                    </span>
                </div>
                <div class="column is-4">
                    <div class="tags has-addons" v-for="(value, label) in selectedKitty.skill2.effects">
                        <span class="tag is-blueydark"><% label %></span>
                        <span class="tag is-info"><% value %></span>
                    </div>
                </div>
                <div class="column is-4">
                    <div class="tags has-addons">
                            <span class="tag is-blueydark">
                                <span class="icon">
                                    <i class="far fa-clock"></i>
                                </span>
                            </span>
                        <span class="tag is-warning">
                                <% selectedKitty.skill2.cooldown %>
                            </span>
                    </div>
                </div>


                <div class="column is-4">
                    <span class="has-text-blueydark">
                        <a class="button" v-on:click="skill3" :disabled="!turn || selectedKitty.skill3.countdown > 0">
                            <% selectedKitty.skill3.name %>
                        </a>
                    </span>
                </div>
                <div class="column is-4">
                    <div class="tags has-addons" v-for="(value, label) in selectedKitty.skill3.effects">
                        <span class="tag is-blueydark"><% label %></span>
                        <span class="tag is-info"><% value %></span>
                    </div>
                </div>
                <div class="column is-4">
                    <div class="tags has-addons">
                            <span class="tag is-blueydark">
                                <span class="icon">
                                    <i class="far fa-clock"></i>
                                </span>
                            </span>
                        <span class="tag is-warning">
                                <% selectedKitty.skill3.cooldown %>
                            </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>