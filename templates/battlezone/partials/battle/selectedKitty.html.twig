<div class="card">
    <div class="card-image">
        <figure class="image is-4by3">
            <img v-bind:src="selectedKitty.image">
        </figure>

        <progress class="progress is-success" v-if="selectedKitty.health >= 60" v-bind:value="selectedKitty.health" v-bind:max="selectedKitty.maxhealth">60%</progress>
        <progress class="progress is-warning" v-if="selectedKitty.health >= 30 && selectedKitty.health < 60" v-bind:value="selectedKitty.health" v-bind:max="selectedKitty.maxhealth">75%</progress>
        <progress class="progress is-danger" v-if="selectedKitty.health < 30" v-bind:value="selectedKitty.health" v-bind:max="selectedKitty.maxhealth">90%</progress>


    </div>
    <div class="card-content">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
            <thead>
                <tr class="is-primary">
                    <th colspan="4">
                        <a class="button is-primary is-medium is-fullwidth">
                            Kitty #<span><% selectedKitty.id %></span>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
            <tr>
                <td colspan="2" class="has-text-weight-bold">Attack</td>
                <td colspan="2"><% selectedKitty.attack %></td>
            </tr>
            <tr>
                <td colspan="2" class="has-text-weight-bold">Defense</td>
                <td colspan="2"><% selectedKitty.defense %></td>
            </tr>
            <tr>
                <td colspan="2" class="has-text-weight-bold">Heal</td>
                <td colspan="2"><% selectedKitty.heal %></td>
            </tr>
            <tr>
                <td colspan="3" class="has-text-weight-bold">Skill Name</td>

                <td class="has-text-weight-bold">Tier</td>
            </tr>
            <tr>
                <td colspan="3"><a class="button is-small  is-link" :disabled="turn ? null : true" v-on:click="skill1"><% selectedKitty.skill1.name %></a></td>
                <td><span class="tag is-light"><% selectedKitty.skill1.tier %></span></td>
            </tr>

            <tr>
                <td colspan="3"><a class="button is-small  is-link" :disabled="turn ? null : true" v-on:click="skill2"><% selectedKitty.skill2.name %></a></td>
                <td><span class="tag is-light"><% selectedKitty.skill2.tier %></span></td>
            </tr>

            <tr>
                <td colspan="3"><a class="button is-small  is-link" :disabled="turn ? null : true" v-on:click="skill3"><% selectedKitty.skill3.name %></a></td>
                <td><span class="tag is-light"><% selectedKitty.skill3.tier %></span></td>
            </tr>

            </tbody>
        </table>
    </div>
</div>