<div class="box" v-if="page == 'connection'">
    <h1>Login Via Metamask</h1>
    {% include "battlezone/partials/connectionError.html.twig" %}

    <div v-if="!signedIn">
        <div class="field has-addons">
            <div class="control is-expanded">
                <input class="input" type="text" placeholder="ETH Address" disabled v-model="profile">
            </div>
            <div class="control">
                <a class="button is-info" v-on:click="login()">
                    Login via Metamask
                </a>
            </div>
        </div>
    </div>
</div>

